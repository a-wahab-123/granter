{
    "name": "whocando",
    "version": "1.0.1",
    "description": "Who can do what in your app? Composable, type-safe authorization for TypeScript.",
    "keywords": [
      "authorization",
      "permissions",
      "access-control",
      "authz",
      "rbac",
      "abac",
      "security",
      "composable",
      "typescript",
      "async",
      "type-safe"
    ],
    "author": "Zlatko Fedor <zfedor@gmail.com>",
    "license": "MIT",
    "repository": {
      "type": "git",
      "url": "https://github.com/seeden/whocando.git"
    },
    "homepage": "https://github.com/seeden/whocando#readme",
    "bugs": {
      "url": "https://github.com/seeden/whocando/issues"
    },
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
      ".": {
        "import": {
          "types": "./dist/index.d.mts",
          "default": "./dist/index.mjs"
        },
        "require": {
          "types": "./dist/index.d.ts",
          "default": "./dist/index.js"
        }
      }
    },
    "files": [
      "dist",
      "README.md",
      "LICENSE"
    ],
    "scripts": {
      "build": "tsup src/index.ts --format cjs,esm --dts --clean",
      "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
      "test": "vitest",
      "test:coverage": "vitest --coverage",
      "typecheck": "tsc --noEmit",
      "lint": "eslint src",
      "prepublishOnly": "npm run build"
    },
    "devDependencies": {
      "@types/node": "^24.7.0",
      "tsup": "^8.5.0",
      "typescript": "^5.9.3",
      "vitest": "^3.2.4"
    },
    "engines": {
      "node": ">=16.0.0"
    }
  }